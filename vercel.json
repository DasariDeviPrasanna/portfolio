{   
    "version": 2,
    "builds": [
        {
            "src": "portfolio.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/assets/Devi_Prasanna_Resume.pdf",
            "dest": "/assets/Devi_Prasanna_Resume.pdf",
            "headers": {
                "Content-Type": "application/pdf",
                "Content-Disposition": "attachment; filename=\"Devi_Prasanna_Resume.pdf\""
            }
        },
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/portfolio.html"
        }
    ]
} 
